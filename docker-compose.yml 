version: '3.8'

services:
  gateway:
    build: ./gateway
    ports:
      - "8000:8000"
    env_file:
      - ./gateway/.env
    depends_on:
      - auth_service
      - product_service

  auth_service:
    build: ./auth_service
    env_file:
      - ./auth_service/.env
    depends_on:
      - auth_db
    restart: always

  product_service:
    build: ./product_service
    env_file:
      - ./product_service/.env
    depends_on:
      - product_db
    restart: always

  auth_db:
    image: postgres:15
    environment:
      POSTGRES_DB: auth_db
      POSTGRES_USER: user
      POSTGRES_PASSWORD: password
    volumes:
      - auth_db_data:/var/lib/postgresql/data

  product_db:
    image: postgres:15
    environment:
      POSTGRES_DB: product_db
      POSTGRES_USER: user
      POSTGRES_PASSWORD: password
    volumes:
      - product_db_data:/var/lib/postgresql/data

  nats:
    image: nats:latest
    ports:
      - "4222:4222"
      - "8222:8222"

volumes:
  auth_db_data:
  product_db_data:
